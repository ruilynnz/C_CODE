//schaltjahr
/*#include <stdio.h>

int schaltjahr(int jahr);

int main() {
    int jahr;

    printf("Geben Sie eine Jahreszahl ein: ");
    scanf("%d", &jahr);

    if (schaltjahr(jahr)) {
        printf("%d ist ein Schaltjahr.\n", jahr);
    }
    else {
        printf("%d ist kein Schaltjahr.\n", jahr);
    }

    return 0;
}

int schaltjahr(int jahr) {
    if ((jahr % 4 == 0 && jahr % 100 != 0) || (jahr % 400 == 0)) {
        return 1; 
    }
    else {
        return 0; 
    }
}*/


